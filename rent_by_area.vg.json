{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Melbourne Median Rent by Apartment/House Type",
  "width": 600,
  "height": 600,

  "data": {
    "url": "melbourne_areas.json",
    "format": {"type": "topojson", "feature": "SA4_2021_AUST_GDA94"}
  },

  "projection": {
    "type": "mercator",
    "scale": 20000,
    "center": [145.0, -37.85]
  },

  "params": [
    {
      "name": "typeSelector",
      "value": "1 Bedroom Flat",
      "bind": {
        "input": "select",
        "options": [
          "1 Bedroom Flat",
          "2 Bedroom Flat",
          "3 Bedroom Flat",
          "2 Bedroom House",
          "3 Bedroom House",
          "4 Bedroom House"
        ],
        "name": "Apartment/House Type: "
      }
    }
  ],

  "layer": [
    {
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": [
          {"field": "properties.SA4_NAME21", "type": "nominal", "title": "Area"}
        ]
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.SA4_NAME21",
          "from": {
            "data": {"url": "rent_medians.csv"},
            "key": "Area",
            "fields": [
              "1 Bedroom Flat",
              "2 Bedroom Flat",
              "3 Bedroom Flat",
              "2 Bedroom House",
              "3 Bedroom House",
              "4 Bedroom House"
            ]
          }
        },
        {
          "calculate": "datum[typeSelector]",
          "as": "Median Rent"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Median Rent",
          "type": "quantitative",
          "scale": {"scheme": "blues"},
          "title": "Median Rent ($)"
        },
        "tooltip": [
          {"field": "properties.SA4_NAME21", "type": "nominal", "title": "Area"},
          {"field": "Median Rent", "type": "quantitative", "title": "Median Rent ($)"},
          {"field": "typeSelector", "type": "nominal", "title": "Type"}
        ]
      }
    }
  ]
}
